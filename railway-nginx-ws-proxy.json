{
	"$schema": "https://railway.app/railway.schema.json",
	"build": {
		"builder": "DOCKERFILE",
		"dockerfilePath": "Dockerfile.nginx"
	},
	"deploy": {
		"restartPolicyType": "ON_FAILURE",
		"restartPolicyMaxRetries": 5
	},
	"ports": [
		{
			"containerPort": 80,
			"protocol": "tcp",
			"published": true,
			"comment": "Nginx Proxy (Public WSS)"
		}
	]
}
